#! /bin/bash
if [ ! -d "$2" ]; then
  mkdir $2
fi
case $1 in
page)
  for ext in js json wxss wxml
  do
  str=s/\${page}/$2/g
    sed s/\${page}/$2/g $(dirname $(dirname $0))/snippets/mini-program-page/index.$ext > ./$2/$2.$ext
  done
  ;;
component)
  for ext in js json wxss wxml
  do
    sed s/\${component}/$2/g $(dirname $(dirname $0))/snippets/mini-program-component/index.$ext > ./$2/$2.$ext
  done
  ;;
esac